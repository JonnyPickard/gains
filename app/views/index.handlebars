<title>index</title>
{{#if user}}
  <div class="container" style="max-width: 550px;">
  <h2 class="page-header">Most Recent Uploads</h2>
  {{# each photos }}
    <ul class="list-group">
      <li class="list-group-item">
        <span class="img-title text-center"><h3>{{photo_name}}</h3></span>
        <hr size="4"/>
        <img class="center-block img-responsive" style="box-shadow: 1px 1px 1px #888888;" src={{photo_url}} />
      </li>
    </ul>
  {{/each}}
  </div>
{{/if}}
{{#unless user.local.username}}
  <script>location.replace("/users/login");</script>
{{/unless}}
