<!DOCTYPE html>
<head>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="/style.css" rel="stylesheet" />
  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon"/>
</head>
<body>
  <div class="container">
    <div class="header clearfix">
      <nav class="navbar navbar-default">
        <ul class="nav nav-pills pull-right">
          {{#if user}}
            <li>
              <form method='post' action='/users/logout'>
                <input class="submitLink" type='submit' value='Logout'>
              </form>
            </li>
            <li role="presentation"><a href="/photo/upload">Upload</a></li>
          {{else}}
            <li role="presentation"><a href="/users/login">Login</a></li>
            <li role="presentation"><a href="/users/register">Sign Up</a></li>
          {{/if}}
        </ul>
        <h3 class="text-muted">Gains</h3>
      </nav>
    </div>
  </div>
  <div class="container">
    <div class="flash-messages">
      {{#if success_msg}}
      <div class="alert alert-success">{{success_msg}}</div>
      {{/if}}

      {{#if error_msg}}
      <div class="alert alert-danger">{{error_msg}}</div>
      {{/if}}

      {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
      {{/if}}
    </div>

    {{{body}}}

    <footer class="footer">
      <p>&copy; 2017 Gains</p>
    </footer>
  </div>
</body>
